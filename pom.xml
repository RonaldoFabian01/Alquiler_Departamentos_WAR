<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.2.4</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>pe.edu.upc</groupId>
    <artifactId>prueba</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>prueba</name>
    <description>Demo testing</description>
    <properties>
        <java.version>17</java.version>
    </properties>

    <!-- Cambio realizado: 'jar' por 'war' -->
    <packaging>war</packaging>

    <dependencies>
        <!-- Tus dependencias aquí -->
    </dependencies>

    <build>
        <plugins>
            <!-- Configuración del maven-compiler-plugin para Java 17 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <release>${java.version}</release>
                </configuration>
            </plugin>

            <!-- Configuración agregada para especificar la clase principal -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                        <configuration>
                            <mainClass>pe.edu.upc.renstate.ArrendadorCalificacion</mainClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Otros plugins existentes -->
            <!-- Asegúrate de revisar y mantener tus otros plugins aquí -->

        </plugins>
    </build>
</project>
